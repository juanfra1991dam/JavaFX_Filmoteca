<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="490.0" prefWidth="499.0" stylesheets="css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx_filmoteca.AddEditController">
    <VBox layoutX="9.0" layoutY="7.0" prefHeight="519.0" prefWidth="481.0" spacing="10">
        <Label styleClass="label-header" text="Detalles de la Película" />
        <Label text="Título:" />
        <TextField fx:id="titleField" />
        <Label text="Año:" />
        <TextField fx:id="yearField" />
        <Label text="Descripción:" />
        <TextArea fx:id="descriptionArea" prefHeight="80.0" prefWidth="284.0" />
        <Label text="Director:" />
        <TextField fx:id="directorField" />
        <Label text="Rating:" />
        <HBox>
            <Slider fx:id="ratingSlider" blockIncrement="1" max="10" min="0" />
            <Label fx:id="ratingLabel" text="0" />
        </HBox>
        <Label text="Géneros:" />
        <TextField fx:id="genreField" />
        <Label text="Poster URL:" />
        <TextField fx:id="posterField" />
        <AnchorPane prefHeight="55.0" prefWidth="499.0">
            <Button layoutX="419.0" onAction="#handleCancel" text="Cancelar" />
            <Button onAction="#handleSave" text="Guardar" />
        </AnchorPane>
    </VBox>
</AnchorPane>
